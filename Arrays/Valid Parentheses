class Solution {
    public boolean isValid(String s) {
        Stack<Character> stk=new Stack<>();
        for(char ch:s.toCharArray()){
            if(ch=='('||ch=='{'||ch=='['){
                stk.push(ch);
            }
            else{
                if(stk.isEmpty())
                return false;
                if(validPair(stk.peek(),ch))
                stk.pop();
                else
                return false;
            }
        }
        return stk.isEmpty();
    }
    public boolean validPair(char a,char b){
        if(a=='('&&b==')')
        return true;
        if(a=='{'&&b=='}')
        return true;
        if(a=='['&&b==']')
        return true;
        else 
        return false;
    }
}
